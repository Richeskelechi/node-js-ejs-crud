<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
      <div class="container">
        <div class="row">
          <form class="col s12" method="post" action="/items">
            <div class="row">
              <div class="input-field col s6">
                <i class="material-icons prefix">shop</i>
                <input id="item_name" type="text" class="validate" name="name">
                <label for="item_name">Item Name</label>
              </div>
              <div class="input-field col s6">
                <i class="material-icons prefix">request_quote</i>
                <input id="price" type="tel" class="validate" name="price">
                <label for="price">Item Price</label>
              </div>
            </div>
            <button class="btn red lighten-2">Add Item</button>
          </form>
        </div>
      </div>
      <div style="height: 282px;"></div>
      <%- include('./partials/footer.ejs') %>

      <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>

</html>